<div style="display: flex; align-items: center; gap: 16px">
    <div style="height: 48px; width: 48px; display: flex; justify-content: center; align-items: center">
        <img height="48" src="https://minecraft.wiki/images/Nether_portal_%28animated%29.png"/>
    </div>
    <span style="color: var(--md-sys-color-tertiary)">
        <b>X</b> @X
        <b>Y</b> @Y
        <b>Z</b> @Z
    </span>
</div>

@code {
    [Parameter] public int X { get; set; }
    [Parameter] public int Y { get; set; }
    [Parameter] public int Z { get; set; }
}
