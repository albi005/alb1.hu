    article {
        padding: 48px 0 128px 0;
    }
    
    article ul {
        color: var(--md-sys-color-on-surface-variant)
    }
    
    h1 {
        font-size: 48px;
        margin: 16px;
        text-align: center;
    }

    h2 {
        font-size: 32px;
        margin: 16px 0 0 0;
        text-align: center;
    }
    
    h3 {
        font-size: 28px;
        margin: 16px 0 0 0;
    }
    
    h4 {
        font-size: 16px;
        margin: 16px 0 0 0;
        font-weight: 360;
    }
    
    ul {
        margin: 0;
    }

    p {
        margin: 16px 0;
        font-weight: 100;
    }

    a {
        color: var(--md-sys-color-primary);
